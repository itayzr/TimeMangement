@model TimeMangement.Models.ForgotPasswordModel
@{
	ViewBag.Title = "Forgot password";
}
<div class="cols">
	<div class="main-col" style="margin-left: 10px; margin-top: 5px;">
		<h1>Forgot password</h1>
		@Html.ValidationSummary(true, "Error while trying to reset your password")
		@using (Html.BeginForm())
		{
			<div>
				<fieldset>
					<legend>Account Information</legend>
					<div class="editor-label">
						@Html.LabelFor(m => m.Email)
					</div>
					<div class="editor-field">
						@Html.TextBoxFor(m => m.Email)
						@Html.ValidationMessageFor(m => m.Email)
					</div>
					<p>
						<input type="submit" value="Submit" /></p>
				</fieldset>
			</div>
		}
	</div>
</div>
@section HeadSection {
	<script src="@Url.Content("~/js/libs/jquery/jquery.validate.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/js/libs/jquery/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
